<% provide(:title, 'All invites') %>
<%= render 'shared/header_index' %>

<div class="row">
	<div class="col s8 offset-s2">
      <ul class="collection with-header">
        <li class="collection-header"><h4>Запрошення:</h4> Знайдено запрошень: <%= @company.promocodes.count %></li>
        <% if @company.promocodes.any? %>
	        <% @promocode_local.each do |promo| %>
	                <li class="collection-item">
	                	<div>
	                		<span class="grey-text text-darken-3">
	                			<span class="title"><b> <%= promo.task %> </b></span> </br>
	                			<%= promo.text %></br></br>
	                			Додано <%= time_ago_in_words(promo.created_at) %> тому 
	                		</span>



	                		<%= link_to "delete", promocodes_path, method: :delete, data: { confirm: "You sure?" }, title: promo.text, class: "secondary-content blue-text" %>




	                	</div>
	                </li>
	        <% end %>

        <% end %>
      </ul>
	</div>
</div>