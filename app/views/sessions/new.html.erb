<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col s6 card white offset-s3">
    <%= form_for(:session, url: sessions_path) do |f| %> <!-- session_path - post(create) -->

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>