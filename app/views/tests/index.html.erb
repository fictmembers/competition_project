<% provide(:title, 'All Users') %>
<%= render 'shared/header_index' %>

<div class="row">
	<div class="col s8 offset-s2">
      <ul class="collection with-header">
        <%= form_tag(check_added_path, method: "post") do %>
        <li class="collection-header"><h4>Логічні тести:</h4></li>
        <% @logical_tests.each do |ltest| %>
                <li class="collection-item">
                	<div>
                        <%= check_box_tag("questions[#{ltest.id}][selected]") %>
                        <%= label_tag("questions[#{ltest.id}][selected]","Питання: ") %>
                		<span class="grey-text text-darken-3"> <%= ltest.question %> </span>
                	</div>
                </li>
        <% end %>
      </ul>
      <ul class="collection with-header">
        <li class="collection-header"><h4>Тести на знання:</h4></li>
        <% @knowledge_tests.each do |ktest| %>
                <li class="collection-item">
                    <div>
                        <span class="grey-text text-darken-3"> <%= ktest.question %> </span>
                    </div>
                </li>
        <% end %>
        <%= submit_tag("Додати тести",class: "btn-large") %>
        <% end %>
      </ul>
	</div>
</div>
