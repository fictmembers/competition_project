<% provide(:title, 'New Invite') %>
<%= render 'shared/header_index' %>

<div class="row">
	<div class="col s4 offset-s4">
		<div class="card">
			<div class="card-image">
            <%= image_tag("exams/#{rand(5)}.jpg")%>
            <span class="card-title grey-text text-darken-4">Час тестуватися!</span>       
            </div>
            <div class="card-content">
           	
                  <%= form_for(:autcode,  url: promocodes_path) do |f| %> 
                    <!-- session_path - post(create) -->
                    <%= f.label :code, "Код доступу" %>
                    <%= f.text_field :code, placeholder: "Промокод" %>

                    <%= f.submit "Розпочати!", class: "btn btn-primary" %>
                  <% end %>  					
            </div>
		</div>
	</div>
</div>