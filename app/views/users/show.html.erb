<% provide(:title, @user.name) %>
<div class="row">
  <nav class="col s2 cyan darken-3 left-navbar">
  	<div class="row">
  	  <%= image_tag("male.png",class: "circle responsive-img") %>
  	</div>
      <h4 class="center-align">
        <%= @user.name %>
      </h2>
      <div class="items-content">
      <ul>
      	<li><%= link_to "Мій профіль","#"%></li><br>
      	<li><%= link_to "Пробне тестування","#"%></li><br>
      	<li><%= link_to "Моя статистика","#"%></li><br>
        <li><%= link_to "Усі користувачі", users_path %></li><br>
      	<li><%= link_to "Оцінка компетенцій","#",class: "check-button"%></li><br>
      </ul>
      </div>
    </nav>

    <div class="col s10">
      <ul class="collection with-header">
        <li class="collection-header"> Запрошення: </li> 

        <% @invite.each do |inv| %>
          <li class="collection-item">
            <div>
              <span class="grey-text text-darken-3">
                      Завдання: <%= inv.task %> <%= inv.text %>
              </span>
                    <a href="#!" class="secondary-content">
                <%= image_tag("message.png", size: '20') %>
              </a>
            </div>
          </li>
        <% end %>

      </ul>
    </div>
</div>