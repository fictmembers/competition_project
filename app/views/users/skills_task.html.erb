<div class="row">
	<div class="col s8 offset-s2">
      <ul class="collection with-header">
        <li class="collection-header"><h4>Завдання на перевірку умінь:</h4></li>
        <%= form_tag(developpage_path,method: 'post') do %>
                <li class="collection-item">
            		<span class="grey-text text-darken-3"> <%= @task.task %></span> <br />
                    <span class="grey-text text-darken-3">Час на виконання роботи: <%= @task.deadline %> день</span> <br />
                     <%= label_tag :address, "Лінк на зроблену роботу у GITHUB" %>
                    <%= text_field_tag :address %>
                    <%= submit_tag("Перевірка") %>
                </li>
        <% end %>

      </ul>
	</div>
</div>
