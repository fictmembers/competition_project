<div class="row">
	<div class="col s8 offset-s2">
      <ul class="collection with-header">
        <li class="collection-header"><h4>Тести на логіку:</h4></li>
        <%= form_tag ('/checktest') do %>

		<% @tests.each do |t| %>
		<% id = 0 %>
                <li class="collection-item">
            				<span class="grey-text text-darken-3"> <%= t.question %></span> <br />
                		<%= radio_button_tag("answer[#{t.id}][selected_answer]", 1) %>
						<%= label_tag("answer[#{t.id}][selected_answer]_1", t.answer1) %> <br />

                		<%= radio_button_tag("answer[#{t.id}][selected_answer]", 2) %>
						<%= label_tag("answer[#{t.id}][selected_answer]_2", t.answer2) %> <br />

                		<%= radio_button_tag("answer[#{t.id}][selected_answer]", 3) %>
						<%= label_tag("answer[#{t.id}][selected_answer]_3", t.answer3) %> <br />

                		<%= radio_button_tag("answer[#{t.id}][selected_answer]", 4) %>
						<%= label_tag("answer[#{t.id}][selected_answer]_4", t.answer4) %> <br />
                </li>

        <% end %>

        <%= submit_tag("Перевірка") %>
        <% end %>

				<% "end"  %>
      </ul>
	</div>
</div>
