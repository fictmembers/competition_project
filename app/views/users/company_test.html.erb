<div class="row">
	<div class="col s8 offset-s2">
      <ul class="collection with-header">
        <li class="collection-header"><h4>Тести:</h4></li>
        <%= form_tag do %>
		<% @tests.each do |t| %>
                <li class="collection-item">
                		<span class="grey-text text-darken-3"> <%= t.question %></span> <br />
						
                		<%= radio_button_tag("answer[#{t.id}]", "1") %> 
						<%= label_tag("answer[#{t.id}]_1", t.answer1) %> <br />
						
                		<%= radio_button_tag("answer[#{t.id}]", "2") %> 
						<%= label_tag("answer[#{t.id}]_2", t.answer2) %> <br />
						
                		<%= radio_button_tag("answer[#{t.id}]", "3") %> 
						<%= label_tag("answer[#{t.id}]_3", t.answer3) %> <br />
						
                		<%= radio_button_tag("answer[#{t.id}]", "4") %> 
						<%= label_tag("answer[#{t.id}]_4", t.answer4) %> <br />
                </li>
        <% end %>
        <%= submit_tag("Перевірка") %>
        <% end %>

      </ul>
	</div>
</div>
 