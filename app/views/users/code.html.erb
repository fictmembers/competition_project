<% provide(:title, 'New Invite') %>
<%= render 'shared/header_index' %>

<div class="row">
	<div class="col s4 offset-s4">
		<div class="card">
			<div class="card-image">
            <%= image_tag("exams/#{rand(5)}.jpg")%>
            <span class="card-title grey-text text-darken-4">Час тестуватися!</span>
            </div>
            <div class="card-content">

                  <%= form_tag('/checkcode') do  %>
                    <!-- session_path - post(create) -->
                    <%= label_tag :code, "Код доступу" %>
                    <%= text_field_tag :code %>
                    <%= submit_tag "Розпочати!", class: "btn btn-primary" %>
                  <% end %>
            </div>
		</div>
	</div>
</div>
